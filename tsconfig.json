{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
